<script type="text/javascript">
postLike = eventId => {
    $.post( `/event/${eventId}/likes`,{}, data => {       
        $(`#event-${data.id} span[name='likes']`).html(data.likes)
    })
}
</script>


<div class="card-columns">
    {{#events}}
    <div class="card" style="width:20rem;" id="event-{{id}}">
        <img class="card-img-top" src="https://source.unsplash.com/random/300x200/?event" alt="Card image top">
        <div class="card-header">{{ title }}</div>
        <div class="card-body text-secondary">                    
            <p class="card-text">{{ description }}</p>                    
            <p class="card-text"><small class="text-muted">Location: {{ location }}</small></p>            
            likes: <span name="likes">{{ likes }}</span>  <input type="button" value="like" class="btn btn-primary" onclick="postLike({{ id }})"/>
            </form>
        </div>
    </div>
    {{/events}}
</div>


